{
  "permissions": {
    "allow": [
      "Bash(pnpm run *)",
      "Bash(pnpm --filter @createconomy/* *)",
      "Bash(pnpm convex:*)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git add)",
      "Bash(git commit)",
      "Bash(git log)",
      "Bash(npx *)",
      "Bash(node *)",
      "Read(./apps/**)",
      "Read(./packages/**)",
      "Read(./docs/**)",
      "Read(.*.md)",
      "Edit(./apps/**)",
      "Edit(./packages/**)",
      "Edit(./docs/**)",
