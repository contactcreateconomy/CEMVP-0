{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  },
  "projects": [
    {
      "name": "createconomy-marketplace",
      "framework": "nextjs",
      "root": "apps/marketplace",
      "domains": ["createconomy.com", "www.createconomy.com"],
      "env": {
        "NEXT_PUBLIC_CONVEX_URL": "@convex-url",
        "CONVEX_DEPLOYMENT_URL": "@convex-deployment-url",
        "NEXT_PUBLIC_APP_URL": "https://createconomy.com"
      }
    },
    {
      "name": "createconomy-forum",
      "framework": "nextjs",
      "root": "apps/forum",
      "domains": ["discuss.createconomy.com"],
      "env": {
        "NEXT_PUBLIC_CONVEX_URL": "@convex-url",
        "CONVEX_DEPLOYMENT_URL": "@convex-deployment-url",
        "NEXT_PUBLIC_APP_URL": "https://discuss.createconomy.com"
      }
    },
    {
      "name": "createconomy-admin",
      "framework": "nextjs",
      "root": "apps/admin",
      "domains": ["console.createconomy.com"],
      "env": {
        "NEXT_PUBLIC_CONVEX_URL": "@convex-url",
        "CONVEX_DEPLOYMENT_URL": "@convex-deployment-url",
        "NEXT_PUBLIC_APP_URL": "https://console.createconomy.com"
      }
    },
    {
      "name": "createconomy-seller",
      "framework": "nextjs",
      "root": "apps/seller",
      "domains": ["seller.createconomy.com"],
      "env": {
        "NEXT_PUBLIC_CONVEX_URL": "@convex-url",
        "CONVEX_DEPLOYMENT_URL": "@convex-deployment-url",
        "NEXT_PUBLIC_APP_URL": "https://seller.createconomy.com"
      }
    }
  ]
}
