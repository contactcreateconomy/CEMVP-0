{
  "name": "createconomy-monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:low-memory": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" turbo run dev",
    "dev:sequential": "pnpm --filter @createconomy/marketplace dev & pnpm --filter @createconomy/forum dev & pnpm --filter @createconomy/admin dev & pnpm --filter @createconomy/seller dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "convex:dev": "cd packages/convex && pnpm exec convex dev",
    "convex:deploy": "cd packages/convex && convex deploy",
    "convex:typecheck": "cd packages/convex && convex typecheck",
    "skills:update": "npx skills add vercel-labs/agent-skills -a claude-code --yes && npx @waynesutton/convex-skills install-all",
    "skills:update:vercel": "npx skills add vercel-labs/agent-skills -a claude-code --yes",
    "skills:update:convex": "npx @waynesutton/convex-skills install-all"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.13.14",
    "autoprefixer": "^10.4.20",
    "convex": "^1.31.6",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-next": "^0.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.7.6",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  }
}
