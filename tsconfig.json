{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@createconomy/ui": ["./packages/ui/src"],
      "@createconomy/types": ["./packages/types/src"],
      "@createconomy/utils": ["./packages/utils/src"],
      "@createconomy/config": ["./packages/config/src"],
      "@createconomy/eslint-config-custom": ["./packages/eslint-config-custom"]
    }
  },
  "exclude": ["node_modules", ".next", "dist", "build", "convex/_generated"]
}
