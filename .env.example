# ============================================
# Convex Backend Configuration
# ============================================

# Convex Deployment URL
# Get this from your Convex dashboard: https://dashboard.convex.dev
# This is the URL for your Convex deployment (development or production)
NEXT_PUBLIC_CONVEX_URL=your-convex-deployment-url

# Convex Admin Key
# Get this from your Convex dashboard settings (Project Settings -> Admin Key)
# WARNING: Keep this secret! Never commit this to version control.
# This key has full access to your Convex deployment.
CONVEX_ADMIN_KEY=your-convex-admin-key

# ============================================
# App URLs Configuration
# ============================================

# Local Development URLs (for local development only)
# These URLs are used for cross-app navigation during development
MARKETPLACE_URL=http://localhost:3000
FORUM_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002
SELLER_URL=http://localhost:3003

# Production URLs (set these in Vercel environment variables)
# Marketplace: https://createconomy.com
# Forum: https://discuss.createconomy.com
# Admin: https://console.createconomy.com
# Seller: https://seller.createconomy.com

# ============================================
# Stripe Configuration (Optional)
# ============================================

# Stripe Publishable Key
# Used for client-side Stripe operations
# Get this from your Stripe dashboard: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Stripe Secret Key
# Used for server-side Stripe operations
# WARNING: Keep this secret! Never commit to version control.
STRIPE_SECRET_KEY=your-stripe-secret-key

# Stripe Webhook Secret
# Used to verify Stripe webhook signatures
# Get this from your Stripe dashboard: Webhooks -> Select endpoint -> Click "Reveal"
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Stripe Price IDs
# Map these to your products in the Stripe dashboard
# Example format: price_1234567890abcdef
STRIPE_PRICE_ID_BASIC=your-basic-price-id
STRIPE_PRICE_ID_PRO=your-pro-price-id
STRIPE_PRICE_ID_ENTERPRISE=your-enterprise-price-id

# ============================================
# Authentication Configuration (Future)
# ============================================

# Auth Provider (e.g., "convex", "clerk", "auth0")
# NEXT_PUBLIC_AUTH_PROVIDER=convex

# Clerk Publishable Key (if using Clerk)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
# CLERK_SECRET_KEY=your-clerk-secret-key

# ============================================
# Email Configuration (Optional)
# ============================================

# Email Service Provider (e.g., "resend", "sendgrid", "aws-ses")
# EMAIL_SERVICE_PROVIDER=resend

# Resend API Key (if using Resend)
# RESEND_API_KEY=your-resend-api-key

# SendGrid API Key (if using SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# From Email Address
# EMAIL_FROM_ADDRESS=noreply@createconomy.com
# EMAIL_FROM_NAME=Createconomy

# ============================================
# Storage Configuration (Optional)
# ============================================

# File Storage Provider (e.g., "convex", "aws-s3", "cloudflare-r2")
# STORAGE_PROVIDER=convex

# AWS S3 Configuration (if using S3)
# AWS_S3_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ============================================
# Analytics Configuration (Optional)
# ============================================

# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# PostHog API Key (if using PostHog)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable/disable features across the platform
# FEATURE_NEW_CHECKOUT=true
# FEATURE_FORUM_ENABLED=true
# FEATURE_SELLER_PORTAL=true
# FEATURE_ADMIN_CONSOLE=true

# ============================================
# Rate Limiting (Optional)
# ============================================

# Rate limit configuration for API routes
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Logging Configuration (Optional)
# ============================================

# Log level: "debug" | "info" | "warn" | "error"
# LOG_LEVEL=info

# Log destination: "console" | "file" | "external"
# LOG_DESTINATION=console

# External logging service (e.g., "datadog", "logrocket")
# LOG_SERVICE_NAME=createconomy

# ============================================
# Development Tools
# ============================================

# Enable debug mode (shows detailed error messages)
# WARNING: Never enable in production!
# DEBUG=false

# Enable mock data for development
# USE_MOCK_DATA=false

# Node.js memory limit (in MB)
# Increase if you're running out of memory with multiple apps
# Defaults: 4096 (4GB), try 6144 (6GB) or 8192 (8GB) if needed
NODE_MEMORY_LIMIT=4096

# Number of parallel dev servers to run
# Lower this if experiencing memory issues
# TURBO_PARALLEL=2
